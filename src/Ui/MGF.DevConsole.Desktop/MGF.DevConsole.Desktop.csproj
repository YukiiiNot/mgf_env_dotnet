<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0-windows</TargetFramework>
    <AssemblyName>MGF.DevConsole.Desktop</AssemblyName>
    <RootNamespace>MGF.DevConsole.Desktop</RootNamespace>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\MGF.Desktop.Shared\MGF.Desktop.Shared.csproj" />
    <ProjectReference Include="..\..\Core\MGF.Contracts\MGF.Contracts.csproj" />
    <ProjectReference Include="..\..\Core\MGF.Hosting\MGF.Hosting.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.3.2" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="10.0.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="10.0.1" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="10.0.1" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="10.0.1" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="10.0.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\config\appsettings.json" Link="config\appsettings.json" CopyToOutputDirectory="PreserveNewest" />
    <None Include="..\..\..\config\appsettings.Development.json"
          Link="config\appsettings.Development.json"
          CopyToOutputDirectory="PreserveNewest"
          Condition="Exists('..\..\..\config\appsettings.Development.json')" />
    <None Include="..\..\..\config\appsettings.Development.sample.json"
          Link="config\appsettings.Development.json"
          CopyToOutputDirectory="PreserveNewest"
          Condition="!Exists('..\..\..\config\appsettings.Development.json')" />
  </ItemGroup>

</Project>
