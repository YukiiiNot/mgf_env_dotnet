    "name": "{PROJECT_CODE}_{CLIENT_NAME}_{PROJECT_NAME}",
    "children": [
      {
        "name": "00_{PROJECT_CODE}_{PROJECT_NAME}_PRODUCTION"
      },
      {
        "name": "01_Edit",
        "kind": "folder",
        "children": [
          { "name": "MASTER" },
          {
            "name": "WORKING",
            "kind": "folder",
            "children": [
              { "name": "{EDITOR_INITIALS}" }
            ]
          },
          {
            "name": "EXTERNALS",
            "kind": "folder",
            "children": [
              {
                "name": "AE",
                "kind": "folder",
                "children": [
                  { "name": "MASTER" },
                  { "name": "{EDITOR_INITIALS}" }
                ]
              },
              {
                "name": "PS",
                "kind": "folder",
                "children": [
                  { "name": "MASTER" },
                  { "name": "{EDITOR_INITIALS}" }
                ]
              },
              {
                "name": "AI",
                "kind": "folder",
                "children": [
                  { "name": "MASTER" },
                  { "name": "{EDITOR_INITIALS}" }
                ]
              },
              {
                "name": "AUD",
                "kind": "folder",
                "children": [
                  { "name": "MASTER" },
                  { "name": "{EDITOR_INITIALS}" }
                ]
              }
            ]
          }
        ]
      },
      {
        "name": "02_Media",
        "kind": "folder",
        "children": [
          { "name": "PROXIES" },
          { "name": "AUDIO" },
          { "name": "GRAPHICS" }
        ]
      },
      {
        "name": "03_Renders_Internal",
        "kind": "folder",
        "children": [
          { "name": "From_Premiere" },
          { "name": "From_AE" }
        ]
      }
    ]
  }
}
